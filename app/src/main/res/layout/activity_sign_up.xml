<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@color/white"
        android:elevation="25dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:fontFamily="@font/akaya_telivigala"
            android:padding="10dp"
            android:text="Register Page"
            android:textAlignment="center"
            android:textColor="@color/txcolor"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:drawableTint="@color/tintmode"
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:autofillHints="name"
            android:background="@drawable/backforsighnup"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/user2"
            android:drawablePadding="5dp"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:drawableTint="@color/tintmode"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="phone"
            android:background="@drawable/backforsighnup"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Phone"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/username"
            app:layout_constraintStart_toStartOf="@+id/username"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <EditText
            android:id="@+id/email"
            android:drawableTint="@color/tintmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/backforsighnup"
            android:drawableLeft="@drawable/email2"
            android:drawablePadding="10dp"
            android:elevation="20dp"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/backforsighnup"
            android:drawableLeft="@drawable/lock2"
            android:drawablePadding="10dp"
            android:elevation="20dp"
            android:drawableTint="@color/tintmode"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/email"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <EditText
            android:id="@+id/district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="postalAddress"
            android:background="@drawable/backforsighnup"
            android:drawableLeft="@drawable/location2"
            android:drawablePadding="10dp"
            android:elevation="20dp"
            android:ems="10"
            android:drawableTint="@color/tintmode"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="District"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="postalAddress"
            android:background="@drawable/backforsighnup"
            android:drawableLeft="@drawable/location2"
            android:drawablePadding="10dp"
            android:elevation="20dp"
            android:drawableTint="@color/tintmode"
            android:ems="10"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Address"
            android:inputType="textPersonName"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/district"
            app:layout_constraintStart_toStartOf="@+id/district"
            app:layout_constraintTop_toBottomOf="@+id/district" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/backforsighnup"
            android:elevation="20dp"
            android:fontFamily="@font/akaya_telivigala"
            android:padding="10dp"
            android:text="Blood Group"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/spinner"
            app:layout_constraintStart_toStartOf="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <Spinner
            android:backgroundTint="@color/tintmode"
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/address"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/backforsighnupforaction"
            android:elevation="15dp"
            android:fontFamily="@font/akaya_telivigala"
            android:padding="8dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/txcolor"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/spinner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Verify Your Email first"
            android:textColor="@color/txcolor"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/signup"
            app:layout_constraintStart_toStartOf="@+id/signup"
            app:layout_constraintTop_toBottomOf="@+id/signup" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>