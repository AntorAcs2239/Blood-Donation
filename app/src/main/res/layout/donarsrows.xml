<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/donarname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aldrich"
                android:maxLines="2"
                android:text="Donar Name"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/bloodanim"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bloodgroup" />

            <TextView
                android:id="@+id/donarphone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/donarname"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aldrich"
                android:text="Phone"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/bloodanim"
                app:layout_constraintStart_toStartOf="@+id/donarname"
                app:layout_constraintTop_toBottomOf="@+id/donarname" />

            <TextView
                android:id="@+id/locaton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/donarphone"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aldrich"
                android:maxLines="3"
                android:text="Location"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/bloodanim"
                app:layout_constraintStart_toStartOf="@+id/donarphone"
                app:layout_constraintTop_toBottomOf="@+id/donarphone" />

            <TextView
                android:id="@+id/bloodgroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/locaton"
                android:background="@color/white"
                android:elevation="10dp"
                android:fontFamily="@font/aldrich"
                android:text="Blood Group: O+"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bloodanim"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/op" />

            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/backforsighnupforaction"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:drawableTint="@color/tintmode"
                android:elevation="20dp"
                android:padding="5dp"
                android:text="Call Now"
                android:textColor="@color/txcolor"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locaton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>